{
    "version": 2,
    "builds": [
      {
        "src": "vercel_app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.11"
        }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/staticfiles/$1"
      },
      {
        "src": "/media/(.*)",
        "dest": "/media/$1"
      },
      {
        "src": "/admin/(.*)",
        "dest": "vercel_app.py"
      },
      {
        "src": "/(.*)",
        "dest": "vercel_app.py"
      }
    ],
    "env": {
      "DJANGO_SETTINGS_MODULE": "electric_shop_project.settings",
      "PYTHONPATH": "."
    }
}